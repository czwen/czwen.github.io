#header
  height: header-height

  position: relative
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 40px
  &:before
    background: linear-gradient(rgba(0, 0, 0, 0.0), transparent)
  &:after
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.0))


#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden

#header-title
  text-align: left
  height: banner-height
  position: absolute
  top: 50%
  margin-top: logo-size * -0.5

$logo-text
  text-decoration: none
  color: #666
  font-weight: 300
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0)
  a&:hover
    color: #333
    transition: color 0.2s

#logo
  @extend $logo-text
  font-size: logo-size
  line-height: logo-size
  letter-spacing: 2px
  color: #ccc
  strong
    color: #333
#main-nav
  float: left
  margin-left: -15px

$nav-link
  float: left
  color: #666
  opacity: 0.6
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0)
  transition: opacity 0.2s
  display: block
  padding: 20px 15px
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: font-size
  width: font-size
  height: font-size
  padding: 20px 15px
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#sub-nav
  float: right
  margin-right: -15px

#nav-rss-link
  &:before
    content: "\f09e"

#nav-twitter-link
  &:before
    content: "\f099"

#nav-instagram-link
  &:before
    content: "\f16d"

#nav-github-link
  &:before
    content: "\f09b"

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 0px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777
